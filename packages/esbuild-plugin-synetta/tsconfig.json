{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true
  },
  
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}