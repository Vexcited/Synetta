{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "jsx": "preserve",
    "verbatimModuleSyntax": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,

    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM"],
    "types": [],
    "jsxImportSource": "synetta"
  },
  "include": ["src"],
  "exclude": ["node_modules", "./dist", "./*.d.ts", "./*.js"]
}