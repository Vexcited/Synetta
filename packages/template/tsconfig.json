{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,

    "isolatedModules": true,
    "esModuleInterop": true,
    
    "jsx": "preserve",
    "jsxImportSource": "synetta",

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },

  "include": ["src", "build.ts"],
  "exclude": ["src-java", "dist", "node_modules"]
}